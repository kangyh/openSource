<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
xmlns:aop="http://www.springframework.org/schema/aop"
xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/aop 
           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<bean id="rpcServer" class="com.heepay.rpc.server.ThriftServerFactory">
         <property name="address" value="${thrift.ens.ip}"></property>
		 <property name="open" value="${zookeeper.ens.open}"></property> 	
	     <property name="nodename" value="${thrift.ens.nodename}"></property>
	     <property name="zkserverip" value="${zookeeper.ens.ip}"></property>
	     <property name="maxReadBufferBytes" value="${server.register.zookeeper.maxReadBufferBytes}"></property>
	     <property name="selectorThreads" value="${server.register.zookeeper.selectorThreads}"></property>
	     <property name="workerThreads" value="${server.register.zookeeper.workerThreads}"></property>
	     <property name="stopTimeoutVal" value="${server.register.zookeeper.stopTimeoutVal}"></property>
	     <property name="acceptQueueSizePerThread" value="${server.register.zookeeper.acceptQueueSizePerThread}"></property>	     
    </bean>
    
    <bean id="riskClient" class="com.heepay.rpc.client.ThriftClientProxy">
         <property name="address" value="${riskControlthrift.ens.ip}"></property>
		 <property name="open" value="${riskControlzookeeper.ens.open}"></property> 	
	     <property name="nodename" value="${riskControlthrift.ens.nodename}"></property>
	     <property name="zkserverip" value="${riskControlzookeeper.ens.ip}"></property>
    </bean>
    <bean id="managerClient" class="com.heepay.rpc.client.ThriftClientProxy">
         <property name="address" value="${managerServerapi.thrift.ens.ip}"></property>
		 <property name="open" value="${managerServerapi.zookeeper.ens.open}"></property> 	
	      <property name="nodename" value="${managerServerapi.thrift.ens.nodename}"></property> 
	     <property name="zkserverip" value="${managerServerapi.zookeeper.ens.ip}"></property>
    </bean>
    <bean id="gateWayDataClient" class="com.heepay.rpc.client.ThriftClientProxy">
         <property  name="address" value="gateWayData.thrift.ens.ip"></property>
		 <property  name="open" value="${gateWayData.zookeeper.ens.open}"></property> 	
	      <property name="nodename" value="${gateWayData.thrift.ens.nodename}"></property> 
	     <property  name="zkserverip" value="${gateWayData.zookeeper.ens.ip}"></property>
    </bean>
    <bean id="paymentClient" class="com.heepay.rpc.client.ThriftClientProxy">
        <property  name="address" value="${payment.client.ip}"></property>
        <property  name="open" value="${payment.client.zookeeper.open}"></property>
        <property name="nodename" value="${payment.client.zookeeper.nodename}"></property>
        <property  name="zkserverip" value="${payment.client.zookeeper.host}"></property>
    </bean>
    <bean class="com.heepay.rpc.server.ThriftRegister">
       <property name="rpcServer" ref="rpcServer"></property>
    </bean>
     
     <bean id="riskQuotaClient" class="com.heepay.rpc.client.RiskQuotaClient"></bean>
    
</beans>  