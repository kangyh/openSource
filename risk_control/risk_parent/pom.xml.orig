<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.heepay.risk</groupId>
  <artifactId>risk_parent</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>risk_parent</name>
  <url>http://maven.apache.org</url>
  
  <distributionManagement>
        <repository>
            <id>releases</id>
            <url>http://192.168.162.51:8081/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <url>http://192.168.162.51:8081/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
  </distributionManagement>
    
   <properties>
		<!-- 方便以后管理使用 -->
  		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	
	<!-- 按照不同的环境部署打包 -->
	<profiles>
	  <profile> 
	    <id>dev</id> 
	    <properties>
	      <env>dev</env>
	    </properties>
	    <activation>
	      <activeByDefault>true</activeByDefault>
	    </activation>
	  </profile>
	  
	  <profile> 
	    <id>test</id> 
	    <properties>
	      <env>test</env> 
	    </properties>
	     <activation>
	      <activeByDefault>false</activeByDefault> 
	    </activation>
	  </profile>
	  
	   <profile> 
	    <id>product</id> 
	    <properties>
	      <env>product</env> <!-- properties 定义 key-value, 这里 key 是 env, value 是 TEST -->
	    </properties>
	  </profile>
	  
	  <profile> 
	    <id>k8s</id> 
	    <properties>
	      <env>k8s</env> <!-- properties 定义 key-value, 这里 key 是 env, value 是 TEST -->
	    </properties>
	  </profile>
	  
	</profiles>
	
	
	<dependencies>
		<dependency>
		  <groupId>com.heepay</groupId>
		  <artifactId>ngp_common</artifactId>
		  <version>1.0-SNAPSHOT</version>
		</dependency>
		<!-- rabbitMq -->
		<dependency>
	        <groupId>org.springframework.amqp</groupId>
	        <artifactId>spring-rabbit</artifactId>
	        <version>1.6.2.RELEASE</version>
	    </dependency>
		<!-- sftp -->
		 <dependency>
           <groupId>com.jcraft</groupId>
           <artifactId>jsch</artifactId>
           <version>0.1.54</version>
       </dependency>
       <!-- jackson-dataformat-smile-2.8.1.jar 为ES服务提供 最新包 -->
		<dependency>
			<groupId>com.fasterxml.jackson.dataformat</groupId>
			<artifactId>jackson-dataformat-smile</artifactId>
			<version>2.8.1</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-core</artifactId>
			<version>2.8.1</version>
		</dependency>
	</dependencies>
 	
 	<!-- 聚合模块 -->
	<modules>
		<module>../risk_common</module>
		<module>../risk_dao</module>
		<module>../risk_server</module>
		<module>../risk_notify</module>
		<module>../risk_es_engine</module>
		<module>../risk_rule_engine</module>
	</modules>
  
  <build>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        <testSourceDirectory>${basedir}/src/test/java</testSourceDirectory>
        <outputDirectory>${basedir}/target/classes</outputDirectory>
        <testOutputDirectory>${basedir}/target/test-class</testOutputDirectory>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/log4j.properties</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <filtering>true</filtering>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>
        <plugins>
               <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin> 
        </plugins>
    </build>
</project>
