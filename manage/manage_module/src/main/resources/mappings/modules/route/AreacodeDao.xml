<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heepay.manage.modules.route.dao.AreacodeDao">
    
	<sql id="areacodeColumns">
		a.id AS "id",
		a.area_code AS "areaCode",
		a.area_name AS "areaName",
		a.province_code AS "provinceCode",
		a.province_name AS "provinceName"
	</sql>
	
	<sql id="areacodeJoins">
	</sql>
    
	<select id="findList" resultType="Areacode">
		SELECT 
			<include refid="areacodeColumns"/>
		FROM areacode a
		<include refid="areacodeJoins"/>
		WHERE a.province_code = #{id}
	</select>

	<select id="findAllList" resultType="Areacode">
		SELECT
		<include refid="areacodeColumns"/>
		FROM areacode a
	</select>

	
</mapper>