<?xml version="1.0" encoding="UTF-8"?>  
<Configuration>  
    <Appenders>  
	    <!-- 中文注释 -->
	    <Console name="CONSOLE" target="SYSTEM_OUT">
	        <PatternLayout pattern="%d %-5p [%t] (%F:%L) - %m%n"/>
	    </Console>
	   
	    <RollingFile name="RestletInfo" fileName="${restletCommonClient.logPath}restlet_api_info.log" filePattern="${restletCommonClient.logPath}restlet_api_info_%d{yyyy-MM-dd}_%i.log.gz">
	        <PatternLayout pattern="%d %-5p [%t] (%F:%L) - %m%n" />
	        <Policies>
	           
	            <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
	           
	            <SizeBasedTriggeringPolicy size="500M" />
	        </Policies>
	       
	        <DefaultRolloverStrategy max="10" />
	    </RollingFile>
	    
	    <RollingFile name="RestletError" fileName="${restletCommonClient.logPath}restlet_api_error.log" filePattern="${restletCommonClient.logPath}restlet_api_error_%d{yyyy-MM-dd}_%i.log.gz">
	        <PatternLayout pattern="%d %-5p [%t] (%F:%L) - %m%n" />
	        <Policies>
	           
	            <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
	           
	            <SizeBasedTriggeringPolicy size="500M" />
	        </Policies>
	        
	        <DefaultRolloverStrategy max="10" />
	        <Filters>
	        	<ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
	            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
	        </Filters>
	    </RollingFile>
    </Appenders>  
   <Loggers>
	    <Root level="info">
	        <AppenderRef ref="CONSOLE"/>
	        <AppenderRef ref="RestletInfo"/>
	        <AppenderRef ref="RestletError"/>
	    </Root>
    </Loggers>    
</Configuration>  